{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "no-console": "warn",
        "quote-props": "off",
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "@typescript-eslint/ban-ts-comment": [
            "error",
            {
                "ts-check": "allow",
                "ts-expect-error": "allow-with-description",
                "ts-ignore": "allow",
                "ts-nocheck": "allow",
                "minimumDescriptionLength": 3
            }
        ]
    }
}
